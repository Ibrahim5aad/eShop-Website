@model Product

<form id="productform" asp-page="/Basket/Index" class="item-medium-1" method="post">
    @if (Model.Sale != 0)
    {<div class="item-medium-1__alert">Sale</div>}
    <div class="item-medium-1__image image" style="background-image: url(@Model.PictureUrl)">
        <a class="item-medium-1__action" href="#" onclick="document.getElementById('productform').submit();">[ ADD TO BASKET ]</a>
    </div>

    <a href="#">
        <h4>@Model.Name</h4>
        <div class="flex-row">
            <div>
                @if (Model.Sale != 0)
                {
                    var salePrice = Model.Price * Model.Sale;
                    <del>$@Model.Price.ToString("N2")</del>
                    <span class="lable">$@salePrice.ToString("N2")</span>
                }
                else
                {
                    <span class="lable">$@Model.Price.ToString("N2")</span>
                }
            </div>
        </div>
    </a>
    <div class="crud-actions">
        <a href="#"><i class="far fa-eye"></i></a>
        <a href="#"><i class="fas fa-edit"></i></a>
        <a href="#"><i class="fas fa-trash-alt"></i></a>
    </div>
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Name" name="name" />
    <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
    <input type="hidden" asp-for="@Model.Discription" name="discription" />
    <input type="hidden" asp-for="@Model.Price" name="price" />
</form>
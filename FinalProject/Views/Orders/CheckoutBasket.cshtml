@model OrderViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h1>Enter your Shipping Address..</h1>

<hr />

<div class="container row">
    <div class="col-md-4">
        <form asp-action="AddOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Order.BuyerId" class="form-control" />
            <input type="hidden" asp-for="Order.Status" class="form-control" />
            <input type="hidden" asp-for="Order.CheckoutDate" class="form-control" />
            <input type="hidden" asp-for="OrderItems" class="form-control" />
            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                var item = Model.OrderItems[i];
                <input type="hidden" name="@("Items[" + i + "].Key")" value="@item.ProductId" />
                <input type="hidden" width="50" class="form-control" min="0" name="@("Items[" + i + "].Value")" value="@item.Quantity" />
            }
            <div class="form-group">
                <label asp-for="Order.Address.City" class="control-label"></label>
                <input asp-for="Order.Address.City" class="form-control" />
                <span asp-validation-for="Order.Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Address.Country" class="control-label"></label>
                <input asp-for="Order.Address.Country" class="form-control" />
                <span asp-validation-for="Order.Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Address.PostalCode" class="control-label"></label>
                <input asp-for="Order.Address.PostalCode" class="form-control" />
                <span asp-validation-for="Order.Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Address.Street" class="control-label"></label>
                <input asp-for="Order.Address.Street" class="form-control" />
                <span asp-validation-for="Order.Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Address.HouseNumber" class="control-label"></label>
                <input asp-for="Order.Address.HouseNumber" class="form-control" />
                <span asp-validation-for="Order.Address.HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
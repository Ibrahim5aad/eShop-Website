@model Product
@{
    ViewData["Title"] = "Details";
}

<h1>Product @ViewData["Title"]</h1>

<br />
<div class="d-flex p-2 bd-highlight">
    <section>
        <div class="row">
            <div class="col-12">
                <form method="post" enctype="multipart/form-data">
                    @if (Model != null)
                    {
                        <input asp-for="Id" type="hidden" />
                    }

                    <div class="form-group">
                        <label asp-for="Name"> </label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FK_Category_Id"> </label>
                        <input asp-for="FK_Category_Id" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Details"> </label>
                        <input asp-for="Details" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"> </label>
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Sale"> </label>
                        <input asp-for="Sale" class="form-control">
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageName"> </label>
                        <input asp-for="ImageName" class="form-control">
                    </div>

                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-light">Back to products list</a>

                </form>
            </div>

        </div>
    </section>

    <section>
            <div class="col-8">
                <img src="@("~/Images/" + Model.ImageName)" asp-append-version="true">
            </div>
    </section>
</div>

